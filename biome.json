{
    "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
    "files": {
        "ignore": [
            ".next/*"
        ]
    },
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "nursery": {
                "noConsole": "error",
                "noUnusedFunctionParameters": "error"
            }
        }
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space"
    },
    "javascript": {
        "formatter": {
            "lineEnding": "crlf"
        },
        "linter": {
            "enabled": true
        }
    },
    "json": {
        "formatter": {
            "enabled": true,
            "indentStyle": "space",
            "lineEnding": "crlf"
        }
    },
    "css": {
        "formatter": {
            "enabled": true,
            "indentStyle": "space",
            "lineEnding": "crlf"
        },
        "linter": {
            "enabled": true
        }
    }
}